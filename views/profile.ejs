<%- include('partials/header') -%>
    <div class="grid grid-cols-3 gap-4">

        <!-- Feed -->
        <div class="bg-red-500 text-white h-24 col-span-2 row-span-2 h-full flex">
            <% for(var i=0; i<posts.length; i++) {%>
            <div class="card w-48 bg-base-100 shadow-xl">
                <figure>
                    <a href="/post/<%= posts[i]._id%>">
                    <img class="object-cover w-48 h-48" src="<%= posts[i].image%>" alt="" />
                    </a>
                </figure>
                <div class="card-body">
                  <h2 class="card-title text-black"><%= posts[i].title%></h2>
                  <p class="text-black"><%= posts[i].caption%></p>
                </div>
              </div>
              <% } %>
                
                <a class="btn btn-primary" href="/feed">Return to Feed</a>

