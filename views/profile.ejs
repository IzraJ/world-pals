<%- include('partials/header') -%>
<div class="contaner bg-gradient-to-r from-primary to-transparent">

    <div class="md:grid grid-cols-3 gap-4">

        <!-- Personal Feed -->
        <div class="text-white col-span-2 row-span-4 h-96 gap-4 px-4 py-4 flex flex-wrap justify-center overflow-auto">
            
            <% for(var i=0; i<posts.length; i++) {%>
            <div class="card w-48 h-98 bg-base-100 shadow-xl bg-gradient-to-b from-accent to-transparent ...">
                <figure>
                    <a href="/post/<%= posts[i]._id%>">
                    <img class="object-cover w-48 h-48" src="<%= posts[i].image%>" alt="" />
                    </a>
                </figure>
                <div class="card-body">
                  <h2 class="card-title text-black"><%= posts[i].title%></h2>
                  <p class="text-black truncate ..."><%= posts[i].caption%></p>
                </div>
              </div>
              <% } %>
            
        </div>
        

            <!-- User Info-->
            <div class=" text-black row-span-0 ">

                <p><strong>User Name</strong>: <%= user.userName %></p>
                <p><strong>Email</strong>: <%= user.email %></p>
                <a class="btn btn-primary" href="/feed">Return to Feed</a>
                <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                
             </div>

            <!-- Students-->
             <div class=" text-black">

                <div tabindex="0" class="collapse collapse-arrow border border-base-300 bg-base-100 rounded-box">
                    <div class="collapse-title text-xl font-medium text-black">
                      Students
                    </div>
                    <div class="collapse-content"> 
                        <% for(var i=0; i<students.length; i++) {%>
                            <li class="text-black">
                                Student: <%= students[i].userName%> Classroom: <%= students[i].classroom%>`
                            </li>
                        <% } %>
                    </div>

                    <a href="/signupStudent" class="col-3 btn btn-primary"> Add student</a>
                </div>
             </div>

             <!-- Classroom Search and List -->
             <div class="flex flex-nowrap justify-center overflow-auto">
                
                <form action="/class/searchClass" enctype="multipart/form-data" method="POST">
                    
                    <div class="mb-3">
                        <h3>Search ClassRooms</h3>
                        <input type="text" placeholder="Search Classrooms" class="input input-bordered input-secondary w-full max-w-xs" id="title" name="title"c/>
                    </div>
                    
                </form>
                
                <h3>Connected ClassRooms</h3>
                <% for(var i=0; i<classroom.length; i++) {%>
                    <li class="text-black">
                        <%= classroom[i].userName%>
                    </li>
                <% } %>
             </div>

             <!--Add posts -->
             <div class=" col-span-3 h-84 flex justify-center text-black">
                
                <form action="/post/createPost" enctype="multipart/form-data" method="POST">
                    <h2>Add a post</h2>
                <div class="mb-3">
                    <input type="text" placeholder="Title" class="input input-bordered input-secondary w-full max-w-xs" id="title" name="title" />
                </div>
                <div class="mb-3">
                    <textarea class="textarea textarea-secondary" placeholder="Caption" id="caption" name="caption"></textarea>
                </div>
                <div class="mb-3">
                    <!-- <label for="imgUpload" class="form-label">Image</label> -->
                    <input type="file" placeholder="Title" class="input form-control input-bordered input-secondary h-full w-full max-w-xs" id="imageUpload" name="file" />
                    <!-- <input type="file" class="form-control" id="imageUpload" name="file"> -->
                </div>
                <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
                </form>

             </div>
             
        
      </div>
 </div> 
      
<%- include('partials/footer') -%>


