<%- include('partials/header') -%>
<div class="contaner bg-gradient-to-r from-primary to-transparent">

    <div class="md:grid grid-cols-3 gap-4">

        <!-- Personal Feed -->
        <div class="text-white col-span-2 row-span-4 h-96 gap-4 px-4 py-4 flex flex-wrap justify-center overflow-auto">
            
            <% for(var i=0; i<posts.length; i++) {%>
            <div class="card w-48 h-98 bg-base-100 shadow-xl bg-gradient-to-b from-accent to-transparent ...">
                <figure>
                    <a href="/post/<%= posts[i]._id%>">
                    <img class="object-cover w-48 h-48" src="<%= posts[i].image%>" alt="" />
                    </a>
                </figure>
                <div class="card-body">
                  <h2 class="card-title text-black"><%= posts[i].title%></h2>
                  <p class="text-black truncate ..."><%= posts[i].caption%></p>
                </div>
              </div>
              <% } %>
            
        </div>
        

            <!-- User Info-->
            <div class=" text-black row-span-0 ">

                <p><strong>User Name</strong>: <%= user.userName %></p>
                <p><strong>Email</strong>: <%= user.email %></p>
                <a class="btn btn-primary" href="/feed">Return to Feed</a>
                <a href="/logout" class="col-3 btn btn-primary">Logout</a>
                
             </div>
             <!-- Add Friends -->
             
          <form
          class="col-1"
          action="/profile/addfriend/<%= user.id %>?_method=PUT"
          method="POST">
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>

             
        
      </div>
 </div> 
      
<%- include('partials/footer') -%>


